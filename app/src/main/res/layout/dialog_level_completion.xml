<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Animated Background Overlay -->
    <View
        android:id="@+id/completionOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        android:alpha="0" />

    <!-- Falling Stars/Balloons Container (behind dialog) -->
    <FrameLayout
        android:id="@+id/fallingStarsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Main Dialog Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/completionCard"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alpha="0"
        android:scaleX="0.5"
        android:scaleY="0.5"
        app:cardBackgroundColor="#FEFEFE"
        app:cardCornerRadius="28dp"
        app:cardElevation="20dp"
        app:strokeColor="#FFD700"
        app:strokeWidth="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:gravity="center">

            <!-- Title -->
            <TextView
                android:id="@+id/levelNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level Complete!"
                android:textColor="#FFD700"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginBottom="8dp"
                android:alpha="0"
                android:translationY="30dp" />

            <!-- Level Name -->
            <TextView
                android:id="@+id/levelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Realm of Echoes"
                android:textColor="#6B4423"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginBottom="24dp"
                android:alpha="0"
                android:translationY="30dp" />

            <!-- Stars Connection Container -->
            <FrameLayout
                android:id="@+id/starsConnectionContainer"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/modern_stats_background" />

            <!-- Completion Message -->
            <TextView
                android:id="@+id/completionMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ‰ Congratulations! ðŸŽ‰\n\nYou've completed all 10 games!\nAll stars are now connected!"
                android:textColor="#8B7355"
                android:textSize="18sp"
                android:fontFamily="serif"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:alpha="0"
                android:translationY="30dp" />

            <!-- Total Stars Text -->
            <TextView
                android:id="@+id/totalStarsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Stars: 30"
                android:textColor="#6B4423"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginBottom="24dp"
                android:alpha="0"
                android:translationY="30dp" />

            <!-- Action Button -->
            <Button
                android:id="@+id/btnContinue"
                style="@style/GameButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Continue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:alpha="0"
                android:scaleX="0.8"
                android:scaleY="0.8" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>

