<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/quest_background_gradient"
    android:padding="24dp"
    tools:context=".WorldSelectionActivity">

    <!-- Title Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUDOKU QUEST"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#7A4A26"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#E6C17A"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Adventure"
            android:textSize="16sp"
            android:textColor="#9E9E9E"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-light" />
    </LinearLayout>

    <!-- Mystic Forest Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mysticForestCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#4CAF50"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:strokeColor="#388E3C"
        app:strokeWidth="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_forest"
                    android:layout_marginEnd="16dp"
                    app:tint="#FFFFFF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ² Mystic Forest"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6Ã—6 Puzzles â€¢ 12 Levels"
                        android:textSize="14sp"
                        android:textColor="#E8F5E8"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Progress Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#388E3C"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/mysticProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progress"
                        android:textSize="12sp"
                        android:textColor="#E8F5E8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/mysticStarsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­ 0"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stars"
                        android:textSize="12sp"
                        android:textColor="#E8F5E8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/mysticCompletedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/12"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:textSize="12sp"
                        android:textColor="#E8F5E8" />
                </LinearLayout>
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journey through enchanted woods, solve puzzles among glowing mushrooms and ancient trees. Master the forest's secrets to unlock the temple beyond."
                android:textSize="14sp"
                android:textColor="#E8F5E8"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Ancient Temple Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ancientTempleCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FF9800"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:strokeColor="#F57C00"
        app:strokeWidth="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_temple"
                    android:layout_marginEnd="16dp"
                    app:tint="#FFFFFF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ›ï¸ Ancient Temple"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9Ã—9 Puzzles â€¢ 18 Levels"
                        android:textSize="14sp"
                        android:textColor="#FFF3E0"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Lock Icon -->
                <ImageView
                    android:id="@+id/templeLockIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_lock"
                    android:visibility="gone"
                    app:tint="#FFFFFF" />
            </LinearLayout>

            <!-- Lock Text -->
            <TextView
                android:id="@+id/templeLockText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”’ Complete Mystic Forest to unlock"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

            <!-- Progress Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F57C00"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/templeProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progress"
                        android:textSize="12sp"
                        android:textColor="#FFF3E0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/templeStarsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­ 0"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stars"
                        android:textSize="12sp"
                        android:textColor="#FFF3E0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/templeCompletedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/18"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:textSize="12sp"
                        android:textColor="#FFF3E0" />
                </LinearLayout>
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ascend ancient stone stairs, solve sacred puzzles in golden chambers. Unlock the temple's deepest secrets and claim the Sudoku Master Seal."
                android:textSize="14sp"
                android:textColor="#FFF3E0"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>












