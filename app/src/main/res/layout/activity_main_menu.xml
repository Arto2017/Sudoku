<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_warm"
    android:fillViewport="true"
    tools:context=".MainMenuActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/horizontal_padding"
        android:minHeight="0dp">

        <!-- App Header Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/appHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/safe_top_area"
            android:layout_marginBottom="@dimen/responsive_margin_large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Settings Button -->
            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings_new"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:contentDescription="Settings"
                android:tint="#333333"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Statistics Button -->
            <ImageButton
                android:id="@+id/btnStatistics"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_stats"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:contentDescription="Statistics"
                android:tint="#333333"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- App Title -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudoku Pro"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium"
                android:shadowColor="#8B7355"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                app:layout_constraintTop_toBottomOf="@id/btnStatistics"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Tagline -->
            <TextView
                android:id="@+id/appTagline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Master the Art of Numbers"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="#757575"
                android:layout_marginTop="@dimen/responsive_margin_small"
                android:fontFamily="sans-serif-light"
                app:layout_constraintTop_toBottomOf="@id/appTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Feature Cards Row -->
        <LinearLayout
            android:id="@+id/carouselContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/responsive_margin_large"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/appHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

                <!-- Daily Challenge Card -->
                <LinearLayout
                    android:id="@+id/dailyChallengeCard"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/daily_challenge_gradient"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="6dp">

                    <!-- Top row: Icon + Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Left: Daily Challenge Icon -->
                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="8dp">

                            <!-- Calendar Icon Background -->
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_calendar_daily"
                                android:background="@drawable/daily_challenge_icon_bg"
                                android:scaleType="centerCrop" />

                            <!-- Streak Badge -->
                            <TextView
                                android:id="@+id/dailyStreakBadge"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="top|end"
                                android:layout_marginTop="-4dp"
                                android:layout_marginEnd="-4dp"
                                android:background="@drawable/streak_badge_background"
                                android:gravity="center"
                                android:text="4"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF" />
                        </FrameLayout>

                        <!-- Right: Title and Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Daily Challenge"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/dailyChallengeDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sep 30 • Medium"
                                android:textSize="11sp"
                                android:textColor="#6B6B6B"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="6dp" />

                            <!-- Status Badge -->
                            <LinearLayout
                                android:id="@+id/dailyStatusBadge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/daily_status_badge"
                                android:padding="4dp"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/dailyStatusText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="You solved today"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:textColor="#4CAF50" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Bottom: Progress + Timer -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="6dp">

                        <!-- Timer -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="6dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Next challenge in:"
                                android:textSize="10sp"
                                android:textColor="#757575"
                                android:fontFamily="sans-serif-light" />

                            <TextView
                                android:id="@+id/dailyTimerText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12:30:45"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:textColor="#FF6B35"
                                android:fontFamily="sans-serif-medium" />
                        </LinearLayout>

                        <!-- CTA Button -->
                        <Button
                            android:id="@+id/btnDailyChallenge"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Play"                
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:background="@drawable/daily_challenge_button_bg"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingVertical="6dp"
                            android:paddingHorizontal="10dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Redesigned Sudoku Quest Card -->
                <LinearLayout
                    android:id="@+id/questCard"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical"
                    android:background="@drawable/quest_card_gradient"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="6dp">

                    <!-- Top row: Title at top, then Progress ring + Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Title at top, full width -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sudoku Quest"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <!-- Progress ring + Content row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Left: Star Progress Text -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <!-- Star Progress Text with Icon -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:background="@drawable/reward_chip_background"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:paddingTop="6dp"
                                    android:paddingBottom="6dp">

                                    <!-- Star Icon -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="⭐"
                                        android:textSize="14sp"
                                        android:layout_marginEnd="4dp" />

                                    <!-- Star Count Text -->
                                    <TextView
                                        android:id="@+id/questStarProgressText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0 / 120"
                                        android:textSize="13sp"
                                        android:textStyle="bold"
                                        android:textColor="#FF8A65"
                                        android:fontFamily="sans-serif-medium" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Right: Progress Ring with Trophy -->
                            <FrameLayout
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_marginStart="8dp">

                                <!-- Progress Ring Background -->
                                <ProgressBar
                                    android:id="@+id/questProgressRing"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="110dp"
                                    android:layout_height="110dp"
                                    android:progress="65"
                                    android:max="100"
                                    android:progressDrawable="@drawable/quest_progress_ring"
                                    android:background="@android:color/transparent" />

                                <!-- Trophy Icon in Center -->
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/golden_icon"
                                    android:scaleType="centerCrop" />

                                <!-- New Badge Overlay -->
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="top|start"
                                    android:src="@drawable/ic_badge_new"
                                    android:layout_marginTop="-3dp"
                                    android:layout_marginStart="-3dp" />
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Bottom: CTA Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                        <!-- Single CTA Button -->
                        <Button
                            android:id="@+id/btnChooseLevel"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Play"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:background="@drawable/choose_level_background"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingVertical="6dp"
                            android:paddingHorizontal="10dp" />
                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>

        <!-- Big Quick Play CTA Button -->
        <LinearLayout
            android:id="@+id/quickPlayContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="72dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@id/carouselContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/btnContinuePlay"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="18dp"
                android:maxWidth="250dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/cta_secondary_background"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingVertical="6dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_save"
                    android:layout_marginEnd="8dp"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@android:color/white" />

            </LinearLayout>

            <!-- Quick Play CTA -->
            <LinearLayout
                android:id="@+id/btnQuickPlay"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:maxWidth="300dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/cta_gradient_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="6dp"
                android:minHeight="64dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_play"
                    android:layout_marginEnd="12dp"
                    app:tint="@android:color/white"
                    android:elevation="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Play"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="none" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@android:color/white" />
            </LinearLayout>

            <!-- CTA Subtext -->
                        <TextView
                android:id="@+id/ctaSubtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                android:text="Choose your challenge"
                android:textSize="14sp"
                android:textColor="#9E9E9E"
                android:layout_marginTop="@dimen/responsive_margin_small"
                android:fontFamily="sans-serif-light" />
        </LinearLayout>

        <!-- Banner Ad -->
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bannerAdView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            app:layout_constraintTop_toBottomOf="@id/quickPlayContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

