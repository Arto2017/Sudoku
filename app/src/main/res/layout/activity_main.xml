<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/parchment_background"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Ultra Compact Enhanced Top Bar with Fantasy Design -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="#FEFEFE"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <!-- Ultra Compact Fantasy Banner Title Area with overlayed back button -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <ImageButton
                    android:id="@+id/gameBackButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="start|center_vertical"
                    android:background="@drawable/back_button_gold"
                    android:contentDescription="Back"
                    android:padding="0dp"
                    android:src="@drawable/ic_arrow_left"
                    android:tint="#2D1810" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/settingsButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/back_button_gold"
                        android:clickable="true"
                        android:contentDescription="Change Difficulty"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="ðŸ§©"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <ImageButton
                        android:id="@+id/systemSettingsButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/back_button_gold"
                        android:clickable="true"
                        android:contentDescription="Settings"
                        android:focusable="true"
                        android:padding="0dp"
                        android:src="@drawable/ic_settings_new"
                        android:tint="#2D1810" />
                </LinearLayout>

                <!-- Decorative Fantasy Banner Background -->
                <LinearLayout
                    android:id="@+id/titleBanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/fantasy_banner_background"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_ancient_book"
                        app:tint="#6B4423" />

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:shadowColor="#8B7355"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:text="6Ã—6 Realm of Echoes"
                        android:textColor="#6B4423"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <!-- Timer, Difficulty, and Mistakes Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Timer Display - Left -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/timerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="00:00"
                        android:textColor="#6B4423"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Difficulty Display - Center -->
                <LinearLayout
                    android:id="@+id/difficultyContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <Spinner
                        android:id="@+id/difficultySpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:popupBackground="#FFFFFF" />

                    <TextView
                        android:id="@+id/difficultyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Medium"
                        android:textColor="#6B4423"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Mistakes Display - Right -->
                <LinearLayout
                    android:id="@+id/mistakesHud"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/mistakesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="0 / âˆž"
                        android:textColor="#6B4C2A"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Sudoku Board Container -->
    <FrameLayout
        android:id="@+id/boardContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/fantasy_board_container_background">

        <com.example.gamesudoku.SudokuBoardView
            android:id="@+id/sudokuBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- Compact Enhanced Control Panel with Fantasy Design -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/controlCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="#FEFEFE"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Compact Number buttons container -->
            <GridLayout
                android:id="@+id/numberButtonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:columnCount="6" />

            <!-- Enhanced Control buttons with fantasy styling -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- All action buttons in one row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/clearButton"
                        style="@style/ActionButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:text="X"
                        android:textSize="11sp"
                        android:textStyle="bold" />


                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/revealHintButton"
                            style="@style/ActionButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="serif"
                            android:text="ðŸ’¡"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hintBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="-1dp"
                            android:elevation="4dp"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="#4CAF50"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </FrameLayout>

                    <Button
                        android:id="@+id/pencilMarksButton"
                        style="@style/ActionButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:text="ðŸ“"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Compact Separator line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/fantasy_separator_background" />

                <!-- Compact Game actions group -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/resetButton"
                        style="@style/GameButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:text="Reset"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_reset"
                        app:iconGravity="top"
                        app:iconPadding="2dp"
                        app:iconSize="16dp" />


                    <Button
                        android:id="@+id/backToMenuButton"
                        style="@style/GameButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="3dp"
                        android:layout_weight="1"
                        android:text="Menu"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_menu"
                        app:iconGravity="top"
                        app:iconPadding="2dp"
                        app:iconSize="16dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Banner Ad at Bottom -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/bannerAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

</LinearLayout>