<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="24dp"
    android:elevation="8dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/golden_icon"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sudoku Quest Progress"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Progress Ring Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <!-- Progress Ring -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp">

            <ProgressBar
                android:id="@+id/dialogProgressRing"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:progress="0"
                android:max="100"
                android:progressDrawable="@drawable/quest_progress_ring"
                android:background="@android:color/transparent" />

            <!-- Progress Text in Center -->
            <TextView
                android:id="@+id/dialogProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0%"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF7A59"
                android:fontFamily="sans-serif-medium" />

        </FrameLayout>

        <!-- Progress Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialogCompletedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Games: 0/40 completed"
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/dialogCurrentRealmText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Levels: 0/4 completed (0%)"
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/dialogRealmsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlocked Realms: 1/4"
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </LinearLayout>

    <!-- Quest Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete 40 games across 4 levels. Each level has 10 games. The circular ring shows your overall game progress, while the horizontal bar shows your level completion."
        android:textSize="14sp"
        android:textColor="#757575"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="2dp"
        android:layout_marginBottom="24dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/dialogCloseButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:text="Close"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/dialogPlayButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Play Quest"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/cta_gradient_background"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

    </LinearLayout>

</LinearLayout>
