<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/parchment_background"
    android:padding="16dp"
    tools:context=".DailyChallengeActivity">

    <!-- Ultra Compact Enhanced Top Bar with Fantasy Design -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="#FEFEFE"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <!-- Ultra Compact Fantasy Banner Title Area with overlayed back button -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp">

                <!-- Back button on the left -->
                <ImageButton
                    android:id="@+id/btnDailyBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start|center_vertical"
                    android:background="@drawable/back_button_gold"
                    android:padding="0dp"
                    android:src="@drawable/ic_arrow_left"
                    android:tint="#2D1810"
                    android:contentDescription="Back" />

                <!-- Settings button on the right -->
                <ImageButton
                    android:id="@+id/btnDailySettings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end|center_vertical"
                    android:background="@android:color/transparent"
                    android:padding="4dp"
                    android:src="@drawable/ic_settings_new"
                    android:tint="#6B4423"
                    android:contentDescription="Settings" />

                <!-- Date dialog centered between the two buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/fantasy_banner_background"
                    android:padding="8dp"
                    android:elevation="3dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar_daily"
                        android:layout_marginEnd="6dp"
                        app:tint="#6B4423" />

                    <TextView
                        android:id="@+id/dailyHeaderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nov 02"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#6B4423"
                        android:fontFamily="serif"
                        android:shadowColor="#8B7355"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Sudoku Board Container -->
    <FrameLayout
        android:id="@+id/boardContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="4dp">

        <!-- Container that centers both stats row and board together -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <!-- Timer, Difficulty, and Status Row - Just above board -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="0dp"
                android:paddingBottom="4dp"
                android:background="@android:color/transparent">

                <!-- Small Timer Display - Left -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="start|center_vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/dailyTimerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textColor="#6B4423"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace" />
                </LinearLayout>

                <!-- Difficulty Display - Center -->
                <LinearLayout
                    android:id="@+id/difficultyContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/dailyDifficultyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium"
                        android:textColor="#6B4423"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="serif" />
                </LinearLayout>

                <!-- Mistakes HUD - Right -->
                <LinearLayout
                    android:id="@+id/mistakesHud"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="end|center_vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/mistakesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 / âˆž"
                        android:textColor="#6B4C2A"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="serif" />
                </LinearLayout>
            </LinearLayout>

            <!-- Sudoku Board View - Centered below stats row -->
            <com.artashes.sudoku.SudokuBoardView
                android:id="@+id/dailySudokuBoard"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </FrameLayout>

    <!-- Compact Enhanced Control Panel with Fantasy Design -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/controlCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#FEFEFE"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Compact Number buttons container -->
            <GridLayout
                android:id="@+id/numberButtonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="6"
                android:layout_marginBottom="4dp" />

            <!-- Enhanced Control buttons with fantasy styling -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- All action buttons in one row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="4dp">

                    <Button
                        android:id="@+id/btnDailyClear"
                        style="@style/ActionButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="2dp"
                        android:text="X"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="serif" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp">
                        
                        <Button
                            android:id="@+id/btnDailyHint"
                            style="@style/ActionButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="ðŸ’¡"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="serif" />
                        
                        <TextView
                            android:id="@+id/hintBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="-1dp"
                            android:layout_marginStart="14dp"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="#4CAF50"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            android:elevation="4dp" />
                    </FrameLayout>

                    <Button
                        android:id="@+id/btnDailyNotes"
                        style="@style/ActionButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:text="ðŸ“"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="serif" />
                </LinearLayout>

                <!-- Compact Separator line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/fantasy_separator_background"
                    android:layout_marginVertical="4dp" />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Banner Ad at Bottom -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/bannerAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        android:visibility="visible"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

</LinearLayout>