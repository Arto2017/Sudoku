<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/fantasy_dialog_background"
    android:padding="24dp">

    <!-- Fantasy Header with Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_help"
            android:layout_marginEnd="12dp"
            app:tint="#8B4513" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit Daily Challenge"
            android:textColor="#6B4423"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:shadowColor="#8B7355"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1" />
    </LinearLayout>

    <!-- Message Text -->
    <TextView
        android:id="@+id/exitMessageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to leave? Your progress will be saved automatically and you can continue later today."
        android:textColor="#6B4423"
        android:textSize="16sp"
        android:fontFamily="serif"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="20dp"
        android:gravity="center" />

    <!-- Decorative Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/fantasy_separator_background"
        android:layout_marginVertical="8dp" />

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <!-- Continue Button -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Continue Playing"
            android:textColor="#6B4423"
            android:textSize="13sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:background="@drawable/fantasy_continue_button"
            android:elevation="2dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingHorizontal="4dp" />

        <!-- Exit Button -->
        <Button
            android:id="@+id/btnExit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Exit Challenge"
            android:textColor="#6B4423"
            android:textSize="13sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:background="@drawable/fantasy_exit_button"
            android:elevation="2dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingHorizontal="4dp" />
    </LinearLayout>
</LinearLayout>
