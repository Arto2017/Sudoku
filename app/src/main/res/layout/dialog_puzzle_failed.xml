<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FEFEFE"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:strokeColor="#D9CBB3"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Ornate header banner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fantasy_banner_background"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_ancient_book"
                    android:layout_marginEnd="8dp"
                    app:tint="#6B4423" />

                <TextView
                    android:id="@+id/dialogTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puzzle failed"
                    android:textColor="#6B4423"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="serif" />
            </LinearLayout>

            <!-- Content area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/dialogMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You made 4 mistakes. Try again?"
                    android:textColor="#4A3A2A"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:fontFamily="serif"
                    android:layout_marginBottom="14dp" />

                <!-- Ornate divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#E6B450"
                    android:alpha="0.6"
                    android:layout_marginBottom="12dp" />

                <!-- Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <Button
                        android:id="@+id/dialogRetry"
                        style="@style/ActionButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Retry"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_reset"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconTint="#6B4423" />

                    <Button
                        android:id="@+id/dialogExit"
                        style="@style/GameButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Exit"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_menu"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconTint="#6B4423" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>



