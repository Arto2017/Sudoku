<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_beige">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GAME HISTORY"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/accent_orange"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Summary Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Key Metrics -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/totalGamesText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Games Played: 0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark_brown"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/bestTimeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Best Time (9x9 Hard): --:--"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark_brown" />

                </LinearLayout>

                <!-- Difficulty Distribution Chart -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Custom Pie Chart -->
                    <com.example.gamesudoku.DifficultyChartView
                        android:id="@+id/difficultyChart"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="16dp" />

                    <!-- Legend -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/legend_easy"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Easy"
                                android:textColor="@color/text_medium_brown"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/legend_medium"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Medium"
                                android:textColor="@color/text_medium_brown"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/legend_hard"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hard"
                                android:textColor="@color/text_medium_brown"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sort Options Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Sort Label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sort by:"
                    android:textColor="@color/text_medium_brown"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Active Sort Display -->
                <TextView
                    android:id="@+id/activeSortText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sorted by: Most Recent"
                    android:textColor="@color/accent_orange"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="12dp" />

                <!-- Sort Buttons Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/sortDateButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“… Date"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/sort_button_background"
                        android:textColor="@color/text_dark_brown" />

                    <Button
                        android:id="@+id/sortTimeButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â± Time"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/sort_button_background"
                        android:textColor="@color/text_dark_brown" />

                </LinearLayout>

                <!-- Sort Buttons Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/sortDifficultyButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŽ¯ Difficulty"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/sort_button_background"
                        android:textColor="@color/text_dark_brown" />

                    <Button
                        android:id="@+id/sortBoardSizeButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ”² Board Size"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/sort_button_background"
                        android:textColor="@color/text_dark_brown" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Game History List -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Games"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark_brown"
            android:layout_marginBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recentGamesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/clearDataButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear History"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_danger_background"
                android:textColor="@color/text_dark_brown" />

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to Menu"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_neutral_background"
                android:textColor="@color/text_dark_brown" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
