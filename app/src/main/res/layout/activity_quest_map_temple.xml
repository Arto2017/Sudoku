<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/temple_background_gradient"
    android:padding="24dp"
    tools:context=".QuestMapActivity">

    <!-- Title Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ›ï¸ ANCIENT TEMPLE"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#BF360C"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#FF9800"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ascend ancient stone stairs"
            android:textSize="16sp"
            android:textColor="#E65100"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-light" />
    </LinearLayout>

    <!-- Progress Bar Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="32dp">

        <!-- Progress Bar -->
        <LinearLayout
            android:id="@+id/progressBarContainer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/temple_progress_background"
            android:padding="4dp" />

    </LinearLayout>

    <!-- Statistics Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="32dp">

        <!-- Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFF3E0"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeColor="#FF9800"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <!-- Left Side - Stars -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/starsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­ 0 Stars"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#BF360C"
                        android:fontFamily="sans-serif-medium" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="#FF9800"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Right Side - Progress -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progress:"
                        android:textSize="14sp"
                        android:textColor="#BF360C"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/progressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#BF360C"
                        android:fontFamily="sans-serif-bold" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Current Level Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFF3E0"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="#FF9800"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Level"
                    android:textSize="14sp"
                    android:textColor="#BF360C"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/currentLevelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Level: Temple Entrance"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#BF360C"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Continue Button -->
    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Continue Quest"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/temple_button_background"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />

    <!-- Reset Button -->
    <Button
        android:id="@+id/resetButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ðŸ”„ Reset Temple Progress"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/reset_button_background"
        android:layout_marginBottom="24dp" />

</LinearLayout>








