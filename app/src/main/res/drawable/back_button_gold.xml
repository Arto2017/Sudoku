<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed/hover -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size android:width="40dp" android:height="40dp" />
            <solid android:color="#D4AF8A" />
            <stroke android:width="1dp" android:color="#D4AF8A" />
            <padding android:left="6dp" android:right="6dp" android:top="6dp" android:bottom="6dp" />
            <corners android:radius="20dp" />
            <shadowColor android:color="#33000000" />
        </shape>
    </item>
    <!-- Default -->
    <item>
        <shape android:shape="oval">
            <size android:width="40dp" android:height="40dp" />
            <solid android:color="#F5E6D3" />
            <stroke android:width="1dp" android:color="#D4AF8A" />
            <padding android:left="6dp" android:right="6dp" android:top="6dp" android:bottom="6dp" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>






