<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Main background with parchment texture -->
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F8F4E8"
                android:endColor="#F0E6D2"
                android:angle="45" />
            <corners android:radius="10dp" />
            <stroke
                android:width="2dp"
                android:color="#8B7355" />
        </shape>
    </item>
    
    <!-- Inner highlight for 3D effect -->
    <item android:top="4dp" android:left="4dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:centerColor="#F8F4E8"
                android:centerY="0.3"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>









