<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Warm, elegant gradient background -->
    <gradient
        android:type="linear"
        android:startColor="#F9F1E6"
        android:centerColor="#F5E6D3"
        android:endColor="#F0DCC2"
        android:angle="135" />
    
    <!-- Rounded corners for modern look -->
    <corners android:radius="10dp" />
    
    <!-- Elegant border -->
    <stroke
        android:width="1dp"
        android:color="#D4AF8A" />
    
    <!-- Subtle shadow effect -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
        
</shape>