<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:top="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#30000000" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Main background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F0E6D2"
                android:endColor="#E8DCC0"
                android:angle="90" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#8B7355" />
        </shape>
    </item>
    
    <!-- Inner highlight -->
    <item android:top="1dp" android:left="1dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#F8F4E8"
                android:centerY="0.4"
                android:type="linear" />
            <corners android:radius="7dp" />
        </shape>
    </item>
</layer-list>









