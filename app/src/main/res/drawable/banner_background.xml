<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow layer for depth -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#8D6E63" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Main banner background with gradient -->
    <item android:left="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F8F4E8"
                android:centerColor="#F5F0E6"
                android:endColor="#E6D7A3"
                android:angle="90" />
            <corners android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="#8B7355" />
        </shape>
    </item>
    
    <!-- Inner highlight for 3D effect -->
    <item android:left="3dp" android:top="3dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#00000000"
                android:angle="90" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
</layer-list>










